    <link rel="stylesheet" href="css/style.css">
    <title>weather</title>
</head>

<body>
    <div class="container my-5">
        <h1 class="text-center title"> Weather in</h1>
        <form class="search-location" action="/" method="POST">
            <input type="text" name="cityname" placeholder="what city ? " autocomplete="off"
                class="form-control text-muted form-rounded p-4  shadow-sm" />
            <button type="submit" class="btn btn-primary">Check</button>
        </form>
        <div class="card rounded my-3 shadow-lg black-card">

        </div>
        <% if(data!=null){ %>
        <div class="card" style="width: 18rem;">
            <!-- <img class="card-img-top" src="http://openweathermap.org/img/wn/" <% + data.weather[0].icon  +%> "@2x.png" alt="Card image cap"> -->
            <div class="card-body">
                <h5 class="card-title"><% data.main.temp %></h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                    content.</p>
            </div>
        </div>
   <% } %>
    </div>
 


